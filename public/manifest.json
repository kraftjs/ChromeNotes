{
  "name": "ChromeNotes",
  "description": "Notes for Chrome!",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Toggle domain-specific notes"
    },
    "view_all_notes": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "View all notes in a new tab"
    },
    "create_new_note": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Create a new note"
    }
  }
}